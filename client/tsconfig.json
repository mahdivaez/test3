{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false, // Temporarily relax strict rules
    "useUnknownInCatchVariables": false, // Treat 'error' as any
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
